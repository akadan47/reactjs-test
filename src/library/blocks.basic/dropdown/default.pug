mixin dropdown(style, args)
  -block_style="dropdown"
  -style=style ? block_style+" "+style : block_style
  -args=args ? args : {}
  div(class=style)
    if block
      block

mixin dropdown__content(style, args)
  -block_style="dropdown__content"
  -style=style ? block_style+" "+style : block_style
  -args=args ? args : {}
  div(class=style)
    if block
      block